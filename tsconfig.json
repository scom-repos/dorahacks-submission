{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["es2020", "dom"],
        "typeRoots": ["node_modules/@types", "types"],
        "paths": {
            "*": ["types/*"]
        },
        "baseUrl": "./"
    },
    "include": [
        "src/**/*",
        "config/**/*",
        "types/**/*"
    ]
}